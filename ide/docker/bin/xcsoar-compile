#!/bin/bash

CPUS=$(lscpu -p | tail -n1 | cut -f1 -d,)
(( CPUS++ ))
cd /opt/xcsoar/XCSoar || exit 1

BUILDOPTS=''
ARGS=($@)
TARGET=${ARGS[0]}
unset "ARGS[0]"

if [ -d /opt/xcsoar/.cache/ccache ]; then
  BUILDOPTS="USE_CCACHE=y"
fi

case "${TARGET}" in
      ANDROID)
        make TARGET=ANDROIDFAT -j "${CPUS}" "${BUILDOPTS}" ${ARGS[@]}
      ;;
      "DOCS")
        make manual -j "${CPUS}" ${ARGS[@]}
      ;;
      "KOBO")
        make TARGET="${TARGET}" -j"${CPUS}" libs
        make TARGET="${TARGET}" -j"${CPUS}"  ${ARGS[@]}
        make TARGET="${TARGET}" -j"${CPUS}" "${BUILDOPTS}" output/KOBO/KoboRoot.tgz
      ;;
      "UNIX")
        make TARGET="${TARGET}" -j"${CPUS}" "${BUILDOPTS}" ${ARGS[@]}
      ;;
      "UNIX-SDL")
        make TARGET="UNIX" -j"${CPUS}" OPENGL=n ENABLE_SDL=y USE_SDL2=y "${BUILDOPTS}" ${ARGS[@]}
      ;;
      "PC")
        make TARGET="${TARGET}" -j"${CPUS}" "${BUILDOPTS}" ${ARGS[@]}
      ;;
      "WIN64")
        make TARGET="${TARGET}" -j"${CPUS}" "${BUILDOPTS}" ${ARGS[@]}
      ;;
      "UNIX-DEBIAN")
        dpkg-buildpackage -uc -us -j"${CPUS}" "${BUILDOPTS}" ${ARGS[@]}
        ls ../
      ;;
      *)
        echo "No target specified. Valid targets: ANDROID DOCS KOBO UNIX UNIX-SDL PC WIN64"
        exit 1
      ;;
esac
