#!/bin/bash

# Determine the ammount of cpu cores
CPUS=$(lscpu -p | tail -n1 | cut -f1 -d,)
(( CPUS++ ))
cd /opt/xcsoar || exit 1

# First argument is the TARGET and add all remaning arguments
# to the end of the line. 
ARGS=($@)
TARGET=${ARGS[0]}
unset ARGS[0]

case "${TARGET}" in
      "ANDROID")
        make TARGET="${TARGET}" -j "${CPUS}" $ARGS
      ;;
      "DOCS")
        make manual -j "${CPUS}"
      ;;
      "KOBO")
        make TARGET="${TARGET}" -j"${CPUS}" libs
        make TARGET="${TARGET}" -j"${CPUS}" $ARGS
        make TARGET="${TARGET}" -j"${CPUS}" output/KOBO/KoboRoot.tgz
      ;;
      "UNIX")
        make TARGET="${TARGET}" -j"${CPUS}" $ARGS
      ;;
      "UNIX-SDL")
        make TARGET="UNIX" -j"${CPUS}" $ARGS OPENGL=n ENABLE_SDL=y USE_SDL2=y
      ;;
      "PC")
        make TARGET="${TARGET}" -j"${CPUS}" $ARGS
      ;;
      "WIN64")
        make TARGET="${TARGET}" -j"${CPUS}" $ARGS
      ;;
      *)
        echo "No target specified. Valid targets: ANDROID DOCS KOBO UNIX UNIX-SDL PC WIN64"
        exit 1
      ;;
esac
